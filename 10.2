using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp17
{
    class MansMath
    {
        public static int Min(params int[] skaitlis)
        {
            if (skaitlis.Length == 0)
            {
                Console.WriteLine("Nav ierakstits skaitlis");
            }
            int min = skaitlis[0];
            foreach (int var in skaitlis)
            {
                if (var < min)
                {
                    min = var;
                }
            }
            return min;
        }
        public static int Max(params int[] skaitlis)
        {
            if (skaitlis.Length == 0)
            {
                Console.WriteLine("Nav ierakstits skaitlis");
            }
            int max = skaitlis[0];
            foreach (int var in skaitlis)
            {
                if (var > max)
                {
                    max = var;
                }
            }
            return max;

        }
    }
